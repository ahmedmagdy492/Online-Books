@page
@model Online_books.Pages.Category.EditModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-2">
    <h2 class="text-info">Edit @Model.Category.Name</h2>
    <hr />
    <form method="post">
        <div class="border p-5 mt-4">
            <div class="row form-group">
                <div class="col-2">
                    <label asp-for="Category.Name"></label>
                </div>
                <div class="col-10">
                    <input type="text" asp-for="Category.Name" class="form-control" />
                </div>
            </div>

            <div class="row form-group offset-sm-2 mt-4">
                <div class="col-3">
                    <input type="submit" class="btn btn-primary form-control" value="Save Changes" />
                </div>
                <div class="col-3">
                    <a asp-page="index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>

            <div asp-validation-summary="All" class="text-danger">
            </div>

        </div>
    </form>
</div>


