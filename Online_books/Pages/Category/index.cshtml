@page
@model Online_books.Pages.Category.indexModel
@{
    ViewData["Title"] = "Categories";
}



<div class="container mt-3">

    <div class="row">
        <div class="col-10">
            <h2 class="text-info">Categories</h2>
        </div>
        <div class="col-2">
            <a asp-page="Create" class="btn btn-info">Create Category</a>
        </div>
    </div>
    <hr />

    <div class="row border p-3">
        @if (Model.Categories.Count() == 0)
        {
            <p>No Categories</p>
        }
        else
        {            
            <table class="table table-bordered table-striped" id="DT_load">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                    </tr>
                    <tr>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var cate in Model.Categories)
                    {
                        <tr>
                            <td>
                                @cate.Name
                            </td>
                            <td>
                                <a asp-page="Delete" asp-route-id="@cate.Id" class="btn btn-primary">Delete</a> |
                                <a asp-page="Edit" asp-route-id="@cate.Id" class="btn btn-primary">Edit</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

